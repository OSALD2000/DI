pipeline("Dependency Injection Projekt") {

    description("This is a test Jenkins Job")
    agent any

    stages {
        stage('clean') {
            steps
            {
                maven
                {
                    mavenInstallation('maven')
                    goals("clean")
                }
            }
        }
        
        stage('build') {
            steps
            {
                maven
                {
                    mavenInstallation('maven')
                    goals("package")
                }
            }
        }

        stage('test') {
            steps {
                echo 'No Test avalible'
            }
        }
        
        stage('run') {
            steps
            {
                maven
                {
                    mavenInstallation('maven')
                    goals("exec:java")
                }
            }
        }
    }
}
